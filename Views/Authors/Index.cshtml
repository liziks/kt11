@model List<Author>

<h1>Авторы</h1>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Книги</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>
                    @foreach (var book in author.Books)
                    {
                        <div>@book.Title <a href="/Books/Delete/@book.Id">[x]</a></div>
                    }
                </td>
                <td>
                    <a href="/Authors/Delete/@author.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Authors/Create" class="btn btn-primary">Добавить автора</a>
<a href="/Books/Create" class="btn btn-secondary">Добавить книгу</a>